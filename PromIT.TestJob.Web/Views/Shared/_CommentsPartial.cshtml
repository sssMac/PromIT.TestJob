@model List<CommentViewModel>

<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var comment in Model.OrderByDescending(x => x.CreatedAt))
            {
                <div class="col-md-8">
                    <div class="media g-mb-30 media-comment comments">
                        <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                            <div class="h5 g-color-gray-dark-v1 mb-0 comment-username">@comment.UserName</div>

                            <div class="g-mb-15">
                                <span class="g-color-gray-dark-v4 g-font-size-12">
                                    @comment.CreatedAt.ToString("dd.MM.yyyy")
                                </span>
                            </div>
                            <p class="comment-text">
                                @comment.Text
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
